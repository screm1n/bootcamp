<!DOCTYPE html>
<html lang="en">

<head>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Flag Quiz</title>
    <link rel="stylesheet" href="/styles/main.css" />

    <script
      src="https://unpkg.com/twemoji@latest/dist/twemoji.min.js"
      crossorigin="anonymous"
    ></script>
  </head>

</head>

<body id="app">
  <form class="container" action="/submit" method="post">
    <div class="horizontal-container">
      <h3>
        Pontuação total:
        <span id="score">
          <%= locals.totalScore ? totalScore : "0" %>
        </span>
      </h3>

    </div>
    <h1 id="countryFlag" class="twemoji"><%= question.flag %></h1>
    <div class="answer-container">
      <input type="text" name="answer" id="userInput" placeholder="Nome do país" autofocus autocomplete="off">

    </div>
    <button type="submit">Enviar<% if(locals.wasCorrect){ %>
        <span class="checkmark">✔</span>
        <% } else if (locals.wasCorrect===false) { %>
          <span class="cross" id="error">✖</span>
          <% } %>
    </button>

  </form>
  <script>
    var wasCorrect = "<%= locals.wasCorrect %>";
    console.log(wasCorrect)
    if (wasCorrect === "false") {
      alert('Game over! Final best score: <%= locals.totalScore %>');
      document.getElementById("app").innerHTML = '<a href="/" class="restart-button">Restart</a>'
    }
    
  </script>
  <script>
    // Call twemoji.parse on the element with the twemoji class
    twemoji.parse(document.getElementById('countryFlag'));
  </script>
</body>

</html>